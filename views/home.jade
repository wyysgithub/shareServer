                                a(href="javascript:;") banner管理
                            dd
                                a(href="javascript:;") 用户反馈
                            dd
                                a(href="javascript:;") 系统通知
                            dd
                                a(href="javascript:;") 参数设置

        div.layui-body
            div(lay-filter="contentnav",lay-allowClose="true").layui-tab.layui-tab-brief
                ul.layui-tab-title
                    li.layui-this 首页
                div.layui-tab-content
                    div.layui-tab-item.layui-show
                        p 这是首页
        div.layui-footer
